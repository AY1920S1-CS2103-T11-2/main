<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Command History" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/history_icon.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@DarkTheme.css" />
                <URL value="@Extensions.css" />
                <URL value="@DarkThemeHistoryWindow.css" />
            </stylesheets>
            <VBox alignment="CENTER" minWidth="600" styleClass="pane-with-border">
                <children>
                    <Label fx:id="commandHistoryTitle" styleClass="prefix-label, prefix_purple" text="MAMS Command History" />
                    <VBox fx:id="historyDisplay" minWidth="200" prefHeight="3000" prefWidth="3000" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <StackPane fx:id="historyDisplayPanelPlaceholder" prefHeight="1000" styleClass="stack-pane, history-display" VBox.vgrow="ALWAYS" />
                    </VBox>
                </children>
                <opaqueInsets>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </opaqueInsets>
                <padding>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </padding>
            </VBox>
        </Scene>
    </scene>
</fx:root>
